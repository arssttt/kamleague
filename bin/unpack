#!/usr/bin/env bash

set -e
set -x

cd /opt/kamleague/website || exit 1

# Set permissions
sudo chown -R ubuntu:ubuntu /opt/kamleague/website

# Set up systemd service if not already done
__cwd="$(pwd)"
if [ ! -L /lib/systemd/system/kamleague-website.service ]; then
    pushd /lib/systemd/system
    ln -s "${__cwd}/etc/kamleague-website.service" kamleague-website.service
    popd
fi

exit 0